{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@impulsar/ui": ["../../packages/ui"],
      "@impulsar/stellar-sdk": ["../../packages/stellar-sdk"],
      "@impulsar/contracts": ["../../packages/contracts"],
      "@impulsar/dtos": ["../../packages/dtos"],
      "@impulsar/core": ["../../packages/core"],
      "@impulsar/config": ["../../packages/config"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
, "app/api/cer/current/route.ts"  ],
  "exclude": ["node_modules"]
}
